<!DOCTYPE html>
<html>
<head>
	<title>File Upload Demo</title>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
	<div class="container mt-5">
		<div class="row">
			<div class="col-md-6">
				<div class="mb-3">
					<label for="fileInput" class="form-label">Choose a text file:</label>
					<input type="file" class="form-control" id="fileInput" accept=".txt" />
				</div>
				<button type="button" class="btn btn-primary" id="loadButton">Load File</button>
			</div>
		</div>
		<div class="row mt-5">
			<div class="col-md-12">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>Line Number</th>
							<th>Content</th>
						</tr>
					</thead>
					<tbody id="table-body"></tbody>
				</table>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12 text-center">
			<a href="/Employee/GetEmployeeInfo" class="btn btn-primary btn-lg">Display Employee Age</a>
		</div>
	</div>

</body>
</html>


<script>
	$(document).ready(function () {
		$('#loadButton').click(function () {
			var file = $('#fileInput').prop('files')[0];
			var reader = new FileReader();
			reader.readAsText(file);
			reader.onload = function () {
				var lines = this.result.split('\n');
				var tableBody = $('#table-body');
				tableBody.empty();
				for (var i = 0; i < lines.length; i++) {
					var line = lines[i];
					tableBody.append('<tr><td>' + (i + 1) + '</td><td>' + line + '</td></tr>');
				}
			};
		});
	});
</script>